generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id   String @id @default(cuid())
  name String
  age  Int
  
  // Relation
  Post Post[]
}

model Post {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String?
  createdAt DateTime @default(dbgenerated("(now(3))"))

  // Relation
  users Users @relation(fields: [userId], references: [id], onDelete: Cascade)
}
